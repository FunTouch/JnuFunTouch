<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/GridLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:orientation="horizontal" 
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="@drawable/bg_general">

    <TextView
        android:id="@+id/tsv_info"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_gravity="center"
        android:text="接触即可为你喜爱的队伍投票"
        android:textSize="23dp" />

    <ListView
        android:id="@+id/lv_vote_team"
        android:layout_height="299dp"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal"
        android:layout_row="4"
        android:cacheColorHint="#00000000"
        android:scrollbarAlwaysDrawVerticalTrack="true" />

    <Space
        android:layout_column="1"
        android:layout_gravity="fill_vertical"
        android:layout_row="12" />

    <Space />

    <Space
        android:layout_width="1dp"
        android:layout_height="15dp" />

    <ImageButton
        android:id="@+id/btn_return"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal"
        android:layout_row="12"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/imagebutton_selector_vote_back"/>

    <ImageButton
        android:id="@+id/btn_submit"
        android:layout_height="40dp"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal"
        android:layout_row="11"
        android:background="@drawable/imagebutton_selector_vote_summit" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center_horizontal"
        android:layout_row="2"
        android:text="在线投票:"
        android:textSize="17dp" />

</GridLayout>