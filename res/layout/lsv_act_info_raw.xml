<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="4"
    android:orientation="horizontal" >

    <Space
        android:id="@+id/Space1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/act_info"
        android:layout_column="0"
        android:layout_gravity="left"
        android:text="活动时间:" />


    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_column="0"
        android:layout_gravity="left"
        android:layout_row="0"
        android:text="活动名称:" />

    <TextView
        android:id="@+id/act_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/act_name"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textView3"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal"
        android:text="TextView" />

    <Space
        android:id="@+id/Space2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_gravity="fill"
        android:layout_row="4" />

    <TextView
        android:id="@+id/act_name"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView1"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal|top"
        android:layout_row="0"
        android:layout_toRightOf="@+id/textView1"
        android:text="TextView" />

    <TextView
        android:id="@+id/act_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/act_name"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/act_name"
        android:lines="3"
        android:singleLine="false"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/act_info"
        android:text="活动简介:" />

</RelativeLayout>