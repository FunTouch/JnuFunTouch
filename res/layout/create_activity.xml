<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/GridLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3"
    android:orientation="horizontal" >

    <Space />

    <EditText
        android:id="@+id/edt_ActName"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal|top"
        android:layout_row="3"
        android:ems="10"
        android:hint="请填写活动名称"
        android:selectAllOnFocus="true" />

    <Space android:layout_row="8" />

    <Space
        android:layout_width="1dp"
        android:layout_height="15dp"
        android:layout_row="22" />

    <Space
        android:layout_width="1dp"
        android:layout_height="15dp"
        android:layout_row="32" />

    <EditText
        android:id="@+id/edt_ActInfo"
        android:layout_width="252dp"
        android:layout_column="1"
        android:layout_gravity="left|top"
        android:layout_row="4"
        android:ems="10"
        android:hint="50字以内"
        android:inputType="text" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/TextView2"
        android:layout_column="0"
        android:layout_gravity="left|center_vertical"
        android:layout_row="4"
        android:text="活动简介："
        android:textSize="16sp" />

    <Space
        android:layout_width="1dp"
        android:layout_height="15dp" />

    <Space
        android:layout_width="1dp"
        android:layout_height="15dp" />

    <EditText
        android:id="@+id/edt_ActTime"
        android:layout_width="254dp"
        android:layout_column="1"
        android:layout_gravity="center_horizontal|top"
        android:layout_row="5"
        android:ems="10"
        android:hint="活动举办时间"
        android:inputType="date" />

    <TextView
        android:id="@+id/textView3"
        android:layout_column="0"
        android:layout_gravity="left|center_vertical"
        android:layout_row="5"
        android:text="活动时间："
        android:textSize="16sp" />

    <TextView
        android:id="@+id/TextView1"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_marginTop="12dp"
        android:layout_row="3"
        android:text="活动名称："
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edt_ActPlace"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal|top"
        android:layout_row="9"
        android:ems="10"
        android:hint="活动举办地点" />

    <TextView
        android:id="@+id/textView4"
        android:layout_column="0"
        android:layout_gravity="left|center_vertical"
        android:layout_row="9"
        android:text="活动地点："
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edt_ActType"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal|top"
        android:layout_row="13"
        android:ems="10"
        android:hint="活动类型" />

    <TextView
        android:id="@+id/textView5"
        android:layout_column="0"
        android:layout_gravity="left|center_vertical"
        android:layout_row="13"
        android:text="活动类型："
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edt_ActOrg"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal|top"
        android:layout_row="17"
        android:ems="10"
        android:hint="活动发起组织" />

    <TextView
        android:id="@+id/textView6"
        android:layout_column="0"
        android:layout_gravity="left|center_vertical"
        android:layout_row="17"
        android:text="举办组织："
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edt_ActActor"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal|top"
        android:layout_row="19"
        android:ems="10"
        android:hint="活动面向对象" />

    <TextView
        android:id="@+id/textView7"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_row="19"
        android:text="活动对象："
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edt_ActLimit"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal|top"
        android:layout_row="21"
        android:ems="10"
        android:hint="参与人数限制"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView8"
        android:layout_column="0"
        android:layout_gravity="left|center_vertical"
        android:layout_row="21"
        android:text="人数限制："
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_CreateAct"
        android:layout_column="1"
        android:layout_gravity="left|center_vertical"
        android:layout_row="31"
        android:text="尼玛终于写完" />

</GridLayout>