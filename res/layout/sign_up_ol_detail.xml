    android:layout_height="match_parent"
    android:columnCount="2"
    android:orientation="horizontal" >

    <ListView
        android:id="@+id/lsv_enroll_act_detail"
        android:layout_height="375dp"
        android:layout_gravity="fill_horizontal" >

