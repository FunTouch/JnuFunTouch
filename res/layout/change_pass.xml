<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="4"
    android:orientation="horizontal"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="@drawable/bg_general"
     >

    <Space
        android:id="@+id/Space18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:layout_gravity="fill_vertical"
        android:layout_row="75" />

    <Space
        android:id="@+id/Space1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="100" />

    <Space
        android:id="@+id/Space8"
        android:layout_width="1dp"
        android:layout_height="15dp"
        android:layout_alignLeft="@+id/edt_old_pass"
        android:layout_below="@+id/Space19"
        android:layout_marginTop="239dp" />

    <Space
        android:id="@+id/Space15"
        android:layout_width="1dp"
        android:layout_height="15dp"
        android:layout_below="@+id/Space4"
        android:layout_row="58"
        android:layout_toRightOf="@+id/edt_old_pass" />

    <Space
        android:id="@+id/Space16"
        android:layout_width="1dp"
        android:layout_height="15dp"
        android:layout_alignLeft="@+id/Space15"
        android:layout_below="@+id/Space15" />

    <Space
        android:id="@+id/Space19"
        android:layout_width="1dp"
        android:layout_height="15dp"
        android:layout_below="@+id/btn_pass_submit"
        android:layout_row="76"
        android:layout_toRightOf="@+id/Space15" />

    <Space
        android:id="@+id/Space17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/btn_pass_submit"
        android:layout_width="115dp"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/edt_old_pass"
        android:layout_below="@+id/Space16"
        android:layout_column="1"
        android:layout_gravity="center_vertical"
        android:layout_row="70"
        android:background="@drawable/imagebutton_selector_confirmchange" />

    <EditText
        android:id="@+id/edt_old_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_column="1"
        android:layout_gravity="left|top"
        android:layout_row="2"
        android:layout_toRightOf="@+id/textView2"
        android:ems="10"
        android:inputType="textPassword" />
    <EditText
        android:id="@+id/edt_new_conf_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_new_pass"
        android:layout_toRightOf="@+id/textView1"
        android:ems="10"
        android:inputType="textPassword" />

    <Space
        android:id="@+id/Space2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Space
        android:id="@+id/Space9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Space
        android:id="@+id/Space3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="45" />

    <Space
        android:id="@+id/Space10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Space
        android:id="@+id/Space4"
        android:layout_width="1dp"
        android:layout_height="15dp"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/Space6"
        android:layout_row="49" />

    <Space
        android:id="@+id/Space11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edt_new_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edt_old_pass"
        android:layout_below="@+id/textView2"
        android:layout_column="1"
        android:layout_gravity="left|top"
        android:layout_row="3"
        android:layout_toLeftOf="@+id/Space15"
        android:ems="10"
        android:inputType="textPassword" />

    <Space
        android:id="@+id/Space5"
        android:layout_width="1dp"
        android:layout_height="15dp"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView3"
        android:layout_row="33" />

    <Space
        android:id="@+id/Space12"
        android:layout_width="1dp"
        android:layout_height="15dp"
        android:layout_alignLeft="@+id/edt_old_pass"
        android:layout_alignTop="@+id/Space5" />

    <Space
        android:id="@+id/Space6"
        android:layout_width="1dp"
        android:layout_height="15dp"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/Space5"
        android:layout_row="40" />

    <Space
        android:id="@+id/Space13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Space
        android:id="@+id/Space7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Space
        android:id="@+id/Space14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edt_new_pass"
        android:layout_alignBottom="@+id/edt_new_pass"
        android:layout_alignParentLeft="true"
        android:text="请输入新密码:"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edt_new_conf_pass"
        android:layout_alignBottom="@+id/edt_new_conf_pass"
        android:layout_alignRight="@+id/Space12"
        android:text="再次确认密码:"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edt_old_pass"
        android:layout_alignBottom="@+id/edt_old_pass"
        android:layout_alignParentLeft="true"
        android:text="请输入原密码:"
        android:textSize="16dp" />

    


</RelativeLayout>