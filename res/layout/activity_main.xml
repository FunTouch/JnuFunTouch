<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".SecondActivity" 
    android:background="@drawable/background_maininterface"
    android:fitsSystemWindows="true"
    android:clipToPadding="true">

     

     

     <ImageButton
         android:id="@+id/btn_setting"
         android:layout_width="113dp"
         android:layout_height="43dp"
         android:layout_alignParentRight="true"
         android:layout_alignParentTop="true"
         android:background="@drawable/imagebutton_selector_main_setting" />

     <ImageButton
         android:id="@+id/btn_funtouch"
         android:layout_width="113dp"
         android:layout_height="43dp"
         android:layout_alignParentRight="true"
         android:layout_below="@id/btn_setting"
         android:layout_alignLeft="@id/btn_setting"
         android:layout_marginTop="55dp"
         android:background="@drawable/imagebutton_selector_main_funtouch" />
     
     <ImageButton
         android:id="@+id/btnCardTransport"
         android:layout_width="113dp"
         android:layout_height="43dp"
         android:layout_alignParentRight="true"
         android:layout_below="@id/btn_funtouch"
         android:layout_marginTop="7dp"
         android:background="@drawable/imagebutton_selector_main_card"/>
     
     <Button
         android:id="@+id/btn_login"
         android:layout_width="113dp"
         android:layout_height="43dp"
         android:layout_alignParentRight="true"
         android:layout_below="@id/btnCardTransport"
         android:layout_marginTop="7dp"
         android:background="@drawable/imagebutton_selector_main_login" />

     <ImageButton
         android:id="@+id/btn_about_activity"
         android:layout_width="113dp"
         android:layout_height="43dp"
         android:layout_alignParentRight="true"
         android:layout_below="@id/btn_login"
         android:layout_marginTop="7dp"
         android:background="@drawable/imagebutton_selector_main_aboutactivity" />
     
     <ImageButton
         android:id="@+id/btn_validate_pass"
         android:layout_width="113dp"
         android:layout_height="43dp"
         android:layout_alignParentRight="true"
         android:layout_below="@id/btn_about_activity"
         android:layout_marginTop="7dp"
         android:background="@drawable/imagebutton_selector_main_validatepass" />
	<ImageButton
         android:id="@+id/btn_exit"
         android:layout_width="113dp"
         android:layout_height="43dp"
         android:layout_alignParentRight="true"
         android:layout_below="@id/btn_validate_pass"
         android:layout_marginTop="7dp"
         android:background="@drawable/imagebutton_selector_main_exit" />

	<Button
	    android:id="@+id/btn_who"
	    style="?android:attr/buttonStyleSmall"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
	    android:layout_centerHorizontal="true"
	    android:text="谁是卧底" />

</RelativeLayout>