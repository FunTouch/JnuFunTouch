<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".SecondActivity" 
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="@drawable/bg_campuslife">

    <ImageButton
        android:id="@+id/btn_contact"
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="135dp"
        android:background="@drawable/imagebutton_selector_cardtransport"
        />

    <Button
        android:id="@+id/btn_bill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_game"
        android:layout_below="@id/btn_game"
        android:layout_marginTop="20dp"
        android:text="查询电费" />

    <ImageButton
        android:id="@+id/btn_game"
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:layout_marginTop="13dp"
        android:layout_alignLeft="@+id/btn_contact"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btn_contact"
        android:background="@drawable/imagebutton_selector_gameassist"
        />

</RelativeLayout>
