<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="1" 
    android:background="@drawable/background_usercenter"
    >"

    <ImageButton
        android:id="@+id/btn_logoff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/logout"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />

    <ImageButton
        android:id="@+id/btn_update_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_logoff"
        android:layout_marginTop="5dp"
        android:background="@drawable/changeinfo"
        android:layout_alignParentLeft="true"
        />

    <ImageButton
        android:id="@+id/btn_rev_beam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_logoff"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/rev_vote"
         />

    <ImageButton
        android:id="@+id/btn_change_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_above="@+id/btn_update_info"
        android:background="@drawable/changepass"
        />

    <ImageButton
        android:id="@+id/btn_sign_up_beam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/btn_rev_beam"
        android:background="@drawable/iwantsignup"
        />

</RelativeLayout>