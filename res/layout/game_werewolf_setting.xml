<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/bg_wolfgame">

    <TextView
        android:id="@+id/tsv_game_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="请输入游戏人数: "
        android:textSize="25sp" />

    <EditText
        android:id="@+id/edt_game_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/tsv_game_num"
        android:ems="10"
        android:inputType="number" />

    <ImageButton
        android:id="@+id/btn_start"
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:layout_below="@id/tsv_game_num"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/imagebutton_selector_startgame"/>

</RelativeLayout>