<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="bottom|end|top"
    android:orientation="vertical"
    android:stretchColumns="1" >

    <GridLayout
        android:id="@+id/GridLayout2"
        android:columnCount="3"
        android:orientation="horizontal" >

        <TextView
            android:layout_gravity="fill_horizontal"
            android:text="活动名称："
            android:textSize="16sp" />

        <EditText
            android:layout_gravity="fill_horizontal"
            android:hint="请填写活动名称"
            android:selectAllOnFocus="true" />

        <Space
            android:layout_column="2"
            android:layout_gravity="fill_vertical"
            android:layout_row="1" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal|top"
            android:layout_row="1"
            android:ems="10"
            android:hint="请输入允许报名的人数上限"
            android:inputType="number" />

        <TextView
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="1"
            android:text="名额限制："
            android:textSize="16sp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal|top"
            android:layout_row="2"
            android:ems="10"
            android:hint="50字以内"
            android:inputType="text" >

            <requestFocus />
        </EditText>

        <TextView
            android:layout_column="0"
            android:layout_gravity="left|center_vertical"
            android:layout_row="2"
            android:text="活动简介："
            android:textSize="16sp" />

    </GridLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="请选择要读取的信息："
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical" >
    </LinearLayout>

    <TableRow>

        <CheckBox
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="姓名" />
    </TableRow>

    <TableRow>

        <CheckBox
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="学号" />
    </TableRow>

    <TableRow>

        <CheckBox
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="联系方式" />
    </TableRow>

    <TableRow>

        <CheckBox
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="邮箱" />
    </TableRow>

    <TableRow>

        <CheckBox
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="QQ" />
    </TableRow>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="完成" />

        <Button
            android:id="@+id/btn_del_vote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/btn_edit"
            android:text="使用" />

        <Button
            android:id="@+id/btn_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/btn_del_vote"
            android:text="删除" />

        <Button
            android:id="@+id/btn_see"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/btn_del"
            android:text="查看" />
    </RelativeLayout>

</TableLayout>