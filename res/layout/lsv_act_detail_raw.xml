<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/GridLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/textView1"
        android:layout_gravity="left"
        android:text="活动名称：" />

    <TextView
        android:id="@+id/act_detail_name"
        android:layout_gravity="left"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView4"
        android:layout_column="0"
        android:layout_gravity="left"
        android:layout_row="2"
        android:text="活动时间：" />

    <TextView
        android:id="@+id/textView5"
        android:layout_column="0"
        android:layout_gravity="left"
        android:text="活动地点：" />

    <TextView
        android:id="@+id/textView7"
        android:layout_column="0"
        android:layout_gravity="left"
        android:text="活动类型：" />

    <TextView
        android:id="@+id/textView6"
        android:layout_column="0"
        android:layout_gravity="left"
        android:text="举办组织：" />

    <TextView
        android:id="@+id/textView8"
        android:layout_column="0"
        android:layout_gravity="left"
        android:text="活动对象：" />

    <TextView
        android:id="@+id/act_detail_time"
        android:layout_gravity="left"
        android:layout_row="2"
        android:text="TextView" />

    <TextView
        android:id="@+id/act_detail_place"
        android:layout_column="1"
        android:layout_gravity="left"
        android:text="TextView" />

    <TextView
        android:id="@+id/act_detail_type"
        android:layout_column="1"
        android:layout_gravity="left"
        android:text="TextView" />

    <TextView
        android:id="@+id/act_detail_org"
        android:layout_column="1"
        android:layout_gravity="left"
        android:text="TextView" />

    <TextView
        android:id="@+id/act_detail_actor"
        android:layout_column="1"
        android:layout_gravity="left"
        android:text="TextView" />

    <TextView
        android:id="@+id/act_detail_info"
        android:layout_width="200dp"
        android:layout_height="34dp"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="1"
        android:text="999999999999999999999999999999999999999999999999999999999999999999999999999999999" />

    <Space
        android:layout_column="2"
        android:layout_gravity="fill_vertical"
        android:layout_row="7" />

    <TextView
        android:id="@+id/textView3"
        android:layout_column="0"
        android:layout_gravity="left|center_vertical"
        android:layout_row="1"
        android:text="活动简介：" />

</GridLayout>
