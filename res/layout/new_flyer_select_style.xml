<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/bg_general">

    <ImageButton
        android:id="@+id/btn_return"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/imagebutton_selector_nopaper_back" />

    <ImageButton
        android:id="@+id/btn_ok"
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/imagebutton_selector_nopaper_confirm" />

    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_ok"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btn_return" >

    </ListView>

    <ImageButton
        android:id="@+id/btn_exit"
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/btn_ok"
        android:layout_marginRight="20dp"
        android:background="@drawable/imagebutton_selector_selectversion_exit" />

</RelativeLayout>
