<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="@drawable/bg_gameassist"
    >

    <ImageButton
        android:id="@+id/btn_who_is_undercover"
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="140dp"
        android:background="@drawable/imagebutton_selector_wodi"/>
    
    <ImageButton
        android:id="@+id/btn_werewolf"
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="150dp"
        android:layout_below="@id/btn_who_is_undercover"
        android:background="@drawable/imagebutton_selector_wolfgame"
        />
    

</RelativeLayout>
