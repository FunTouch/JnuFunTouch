<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/bg_general">

    <GridLayout
        android:id="@+id/GridLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_name"
            android:layout_gravity="fill_horizontal"
            android:text="姓名："
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv2_name"
            android:layout_gravity="fill_horizontal"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_name"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal"
            android:layout_row="0"
            android:ems="10"
            android:visibility="gone" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/tv_institute"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:text="学院："
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv2_institute"
            android:layout_gravity="fill_horizontal"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_institute"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal"
            android:layout_row="1"
            android:visibility="gone" >
        </EditText>

        <TextView
            android:id="@+id/tv_sno"
            android:layout_column="0"
            android:textSize="16sp"
            android:layout_gravity="fill_horizontal"
            android:text="学号：" />

        <TextView
            android:id="@+id/tv2_sno"
            android:layout_gravity="fill_horizontal"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_sno"
            android:layout_column="1"
            android:textSize="16sp"
            android:layout_gravity="fill_horizontal"
            android:layout_row="2"
            android:visibility="gone" >
        </EditText>

        <TextView
            android:id="@+id/tv_phone"
            android:layout_column="0"
            android:textSize="16sp"
            android:layout_gravity="fill_horizontal"
            android:text="电话：" />

        <TextView
            android:id="@+id/tv2_phone"
            android:layout_gravity="fill_horizontal"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal"
            android:layout_row="3"
            android:visibility="gone" >
        </EditText>

        <TextView
            android:id="@+id/tv_qq"
            android:layout_column="0"
            android:textSize="16sp"
            android:layout_gravity="fill_horizontal"
            android:text="QQ：" />

        <TextView
            android:id="@+id/tv2_qq"
            android:layout_gravity="fill_horizontal"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_qq"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal"
            android:layout_row="4"
            android:visibility="gone" >
        </EditText>

        <TextView
            android:id="@+id/tv_wechat"
            android:layout_column="0"
            android:textSize="16sp"
            android:layout_gravity="fill_horizontal"
            android:text="微信：" />

        <TextView
            android:id="@+id/tv2_wechat"
            android:layout_gravity="fill_horizontal"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_wechat"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal"
            android:layout_row="5"
            android:visibility="gone" >
        </EditText>

        <Space
            android:layout_column="2"
            android:layout_gravity="fill_vertical"
            android:layout_row="6" />
    </GridLayout>

    <ImageButton
        android:id="@+id/btn_confirm"
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/btn_transport"
        android:layout_alignBottom="@+id/btn_transport"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:background="@drawable/imagebutton_selector_mingpian_confirm"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/btn_edit"
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/btn_transport"
        android:layout_alignBottom="@+id/btn_transport"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/imagebutton_selector_mingpian_edit"/>

    <ImageButton
        android:id="@+id/btn_transport"
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/GridLayout1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/imagebutton_selector_mingpian_tuisong" />

</RelativeLayout>
