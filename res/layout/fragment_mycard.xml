<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <GridLayout
        android:id="@+id/GridLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_name"
            android:layout_gravity="fill_horizontal"
            android:text="姓名：" />

        <TextView
            android:id="@+id/tv2_name"
            android:layout_gravity="fill_horizontal"
            android:text="彭冬毡" />

        <EditText
            android:id="@+id/et_name"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_row="0"
            android:ems="10"
            android:visibility="gone" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/tv_institute"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:text="学院：" />

        <TextView
            android:id="@+id/tv2_institute"
            android:layout_gravity="fill_horizontal"
            android:text="电气信息学院" />

        <EditText
            android:id="@+id/et_institute"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_row="1"
            android:visibility="gone" >
        </EditText>

        <TextView
            android:id="@+id/tv_sno"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:text="学号：" />

        <TextView
            android:id="@+id/tv2_sno"
            android:layout_gravity="fill_horizontal"
            android:text="2012052204" />

        <EditText
            android:id="@+id/et_sno"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_row="2"
            android:visibility="gone" >
        </EditText>

        <TextView
            android:id="@+id/tv_phone"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:text="电话：" />

        <TextView
            android:id="@+id/tv2_phone"
            android:layout_gravity="fill_horizontal"
            android:text="18102260095" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_row="3"
            android:visibility="gone" >
        </EditText>

        <TextView
            android:id="@+id/tv_qq"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:text="QQ：" />

        <TextView
            android:id="@+id/tv2_qq"
            android:layout_gravity="fill_horizontal"
            android:text="383587243" />

        <EditText
            android:id="@+id/et_qq"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_row="4"
            android:visibility="gone" >
        </EditText>

        <TextView
            android:id="@+id/tv_wechat"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:text="微信：" />

        <TextView
            android:id="@+id/tv2_wechat"
            android:layout_gravity="fill_horizontal"
            android:text="gltter706" />

        <EditText
            android:id="@+id/et_wechat"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_row="5"
            android:visibility="gone" >
        </EditText>

        <Space
            android:layout_column="2"
            android:layout_gravity="fill_vertical"
            android:layout_row="6" />
    </GridLayout>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_transport"
        android:layout_alignBottom="@+id/btn_transport"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:text="确认"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_transport"
        android:layout_alignBottom="@+id/btn_transport"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:text="编辑" />

    <Button
        android:id="@+id/btn_transport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/GridLayout1"
        android:layout_marginLeft="44dp"
        android:text="推送" />

    <ImageView
        android:id="@+id/img_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="28dp"
        android:src="@drawable/ic_launcher" />

</RelativeLayout>
