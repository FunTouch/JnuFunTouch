<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    
    <style name="TranslucentTheme" parent="AppBaseTheme">
        <item name="android:actionBarStyle">@style/AppTheme.ActionBarStyle</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="AppTheme.ActionBarStyle" parent="android:Widget.ActionBar">
        <item name="android:background">@color/royalblue</item>
		<item name="android:titleTextStyle">@style/ActionBarTitle</item>
    </style>
    
    <style name="ActionBarTitle" parent="@android:style/TextAppearance.Holo.Large">
    <item name="android:textColor">@color/white</item>
    <item name="android:textSize">20sp</item>
</style>

    
</resources>
