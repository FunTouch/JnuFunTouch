<resources>

    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        
    </style>
    
    <style name="TranslucentTheme" parent="android:Theme.Holo.Light">
        
        <item name="android:actionBarStyle">@style/AppTheme.ActionBarStyle</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="AppTheme.PopupMenu" parent="android:Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panelle</item>
    </style>
    
    
    <style name="AppTheme.ActionBarStyle" parent="android:Widget.ActionBar">
        <item name="android:background">@color/royalblue</item>
		<item name="android:titleTextStyle">@style/ActionBarTitle</item>
    </style>
    
    <style name="ActionBarTitle" parent="@android:style/TextAppearance.Holo.Large">
    <item name="android:textColor">@color/white</item>
    <item name="android:textSize">20sp</item>
</style>

    
</resources>
